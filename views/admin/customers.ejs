<%- include("../../views/partial/admin/header") %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="content-header row">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="content-title card-title">Customers</h2>
       
    </div>
</div>         
        </div>
        
            <header class="card-header text-center mb-20">
                <form action="/admin/users/" method="get" class="d-inline">
                    <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px; margin-left: 230px;">
                        <input type="text" class="form-control border-0 rounded-pill" placeholder="Search customers..." name="search" style="width: 300px;" value="<%= search %>">
                        <button class="btn  border-0" type="submit">Search</button>
                        <% if(search) { %>
                          <a href="/admin/users" class="btn btn-secondary ms-2">Clear</a>
                        <% } %>
                      
                    </div>
                </form>
            </header>
            <div class="right mt-5">
                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col"><b>Name</b></th>
                        <th scope="col"><b>Email</b></th>
                        <th scope="col"><b>Phone No</b></th>
                        <th scope="col"><b>Action</b></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(let i=0; i<data.length ; i++) {%>
                            <tr>
                                <td><%=data[i].name%></td>
                                <td><%=data[i].email%></td>
                                <td><%=data[i].phone%></td>
                                <td> 
                                  <%if(data[i].isBlocked === false){%>
                                        <!-- <button class="btn btn-danger" style="width: 80px;">
                                            <a href="/admin/blockCustomer?id=" class="text-white" style="text-decoration: none;">Block</a>
                                        </button> -->

                                        <button 
                                            class="btn btn-danger block-btn" 
                                            data-id="<%= data[i]._id %>" 
                                            style="width: 80px;">
                                            Block
                                        </button>

                                   <%}else{%>     
                                        <!-- <button class="btn btn-success" style="width: 80px;">
                                            <a href="/admin/unblockCustomer?id=" class="text-white" style="text-decoration: none;">Unblock</a>
                                        </button>  -->
                                        <button
                                            class="btn btn-success unblock-btn" 
                                            data-id="<%=data[i]._id%>"
                                            style="width: 80px; color: white;">
                                            Unblock
                                        </button>
                                    <%}%>    
                                </td>
                            </tr>
                       <%}%>     
                    </tbody>
                  </table>
        </div>
        <div class="container mt-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
                  <%for(let i=1; i<=totalPages ; i++){%>
                    <li class="page-item <%=(i===currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>

                  <%}%>  
                </ul>
            </nav>
        </div>
        <%- include("../../views/partial/admin/footer") %>

        <script>
            document.querySelectorAll('.block-btn').forEach(button => {
              button.addEventListener('click', function () {
                const userId = this.getAttribute('data-id');
          
                Swal.fire({
                  title: 'Are you sure?',
                  text: "Do you want to block this customer..",
                  icon: 'warning',
                  showCancelButton: true,
                  confirmButtonColor: '#d33',
                  cancelButtonColor: '#3085d6',
                  confirmButtonText: 'Yes, block them!',
                  cancelButtonText: 'Cancel'
                }).then((result) => {
                  if (result.isConfirmed) {
                    // Redirect to block URL if confirmed
                    window.location.href = `/admin/blockCustomer?id=${userId}`;
                  }
                });
              });
            });
            document.querySelectorAll('.unblock-btn').forEach(button => {
              button.addEventListener('click', function () {
                const userId = this.getAttribute('data-id');
          
                Swal.fire({
                  title: 'Are you sure?',
                  text: "Do you want to unblock this customer.",
                  icon: 'warning',
                  showCancelButton: true,
                  confirmButtonColor: '#28a745', 
                  cancelButtonColor: '#6c757d',
                  confirmButtonText: 'Yes, unblock them!',
                  cancelButtonText: 'Cancel'
                }).then((result) => {
                  if (result.isConfirmed) {
                    // Redirect to block URL if confirmed
                    window.location.href = `/admin/unblockCustomer?id=${userId}`;
                  }
                });
              });
            });
          </script>
          
